{
  "compilerOptions": {
    "target": "ES2020",                     // Specifies the target ECMAScript version.
    "module": "CommonJS",                  // Use CommonJS modules (required for Node.js).
    "strict": true,                        // Enable all strict type-checking options.
    "esModuleInterop": true,               // Allow default imports from CommonJS modules.
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in imports.
    "moduleResolution": "node",           // Resolve modules in Node.js style.
    "skipLibCheck": true,                  // Skip type checking of declaration files.
    "outDir": "./dist",                    // Output directory for compiled files.
    "rootDir": "./src",                    // Root directory of TypeScript files.
    "resolveJsonModule": true,             // Allow importing JSON files.
    "typeRoots": ["./node_modules/@types"], // Look for type definitions in `node_modules/@types`.
    "allowSyntheticDefaultImports": true, // Support default imports from modules with no default export.
    "noImplicitAny": true,                 // Raise error on variables with `any` type.
    "strictNullChecks": true               // Enable strict null checking.
  },
  "include": ["src/**/*"],                // Include all files in the `src` directory.
  "exclude": ["node_modules", "dist"]     // Exclude `node_modules` and output directory.
}
